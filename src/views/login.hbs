<div class='w-[80%] mx-auto my-4'>
  <a href='/' class='flex items-center max-w-max'>
    <img src='/image/logo-header.png' alt='Website Logo' />
  </a>
</div>

<main class="w-full py-[60px]">
  <form
    method="POST"
    action="login"
    class="max-w-[80%] md:max-w-lg lg:max-w-xl flex flex-col items-center mx-auto p-8 bg-secondary-200"
  >
    <h1 class="text-[40px] font-extrabold font-Montserrat text-primary uppercase">Login</h1>

    <div class="flex mt-4 space-x-6">
      <a href="#" class="group">
        <div class="flex w-12 h-12 rounded-full border-2 border-secondary-100">
          <img src="/image/facebook-icon.png" alt="Facebook Icon" class="m-2" />
        </div>
      </a>
      <a href="#" class="group">
        <div class="flex w-12 h-12 rounded-full border-2 border-secondary-100">
          <img src="/image/google-icon.png" alt="Google Icon" class="m-2" />
        </div>
      </a>
    </div>

    <div class="mt-3 flex items-center pt-2 w-full">
      <div class="w-2/5 h-[2px] bg-secondary-100"></div>
      <div class="w-1/5 text-center bg-secondary-200">
        <p class="mx-4 text-xl font-normal text-secondary-600 font-Montserrat">Or</p>
      </div>
      <div class="w-2/5 h-[2px] bg-secondary-100"></div>
    </div>

    <div class="w-full mt-12 space-y-4">
      <div class="space-y-12">
        <div class="relative">
          <input
            type="text"
            name="username"
            id="username"
            placeholder="Enter username"
            class="input peer"
            required
          />
          <label
            for="username"
            class="label peer-focus:text-primary peer-focus:font-semibold"
          >Username</label>
        </div>
        <div class="relative">
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Enter password"
            class="input peer"
            required
          />
          <label
            for="password"
            class="label peer-focus:text-primary peer-focus:font-semibold"
          >Password</label>
        </div>
      </div>
      <div class="flex flex-col">
        <a href="#" class="ml-auto text-lg font-semibold text-primary font-Hindmadurai">Forgot
          Password</a>
        <span class="text-lg font-medium italic text-secondary-400 font-Hindmadurai"></span>
      </div>
    </div>

    <div class="mt-5 text-center space-y-2.5">
      <button
        type="submit"
        onclick="window.location.href='#'"
        class="btn-nav w-auto h-auto px-8 py-3 text-2xl font-Montserrat"
      >Login</button>
      <div>
        <span class="text-lg font-normal text-secondary-300 font-Hindmadurai">Donâ€™t have an account?</span>
        <a
          href="/register"
          class="text-lg font-semibold text-secondary-400 uppercase font-Hindmadurai"
        >Sign up</a>
      </div>
    </div>
  </form>
</main>