<div class="w-[80%] mx-auto my-4">
  <a href="#" class="flex items-center max-w-max">
    <img src="/image/logo-header.png" alt="Website Logo" />
  </a>
</div>

<main class="w-full py-[60px]">
  <form
    method="POST"
    action="register"
    class="max-w-[80%] md:max-w-lg lg:max-w-xl flex flex-col items-center mx-auto p-8 bg-secondary-200"
  >
    <h1 class="text-[40px] font-extrabold font-Montserrat text-primary uppercase">Sign in</h1>

    <div class="flex mt-4 space-x-6">
      <a href="#" class="group">
        <div class="flex items-center">
          <div class="flex w-12 h-12 rounded-full border-2 border-secondary-100">
            <img src="/image/facebook-icon.png" alt="Facebook Icon" class="m-2" />
          </div>
        </div>
      </a>
      <a href="#" class="group">
        <div class="flex items-center">
          <div class="flex w-12 h-12 rounded-full border-2 border-secondary-100">
            <img src="/image/google-icon.png" alt="Google Icon" class="m-2" />
          </div>
        </div>
      </a>
    </div>

    <div class="mt-3 flex items-center pt-2 w-full">
      <div class="w-2/5 h-[2px] bg-secondary-100"></div>
      <div class="w-1/5 text-center bg-secondary-200">
        <p class="mx-4 text-xl font-normal text-secondary-600 font-Montserrat">Or</p>
      </div>
      <div class="w-2/5 h-[2px] bg-secondary-100"></div>
    </div>

    <div class="w-full mt-12 space-y-4">
      <div class="space-y-12">
        <div class="relative">
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Enter email"
            class="input peer"
            required
          />
          <label
            for="email"
            class="label peer-focus:text-primary peer-focus:font-semibold"
          >Email</label>
        </div>
        <div class="relative">
          <input
            type="text"
            name="username"
            id="username"
            placeholder="Enter username"
            class="input peer"
            required
          />
          <label
            for="username"
            class="label peer-focus:text-primary peer-focus:font-semibold"
          >Username</label>
        </div>
        <div class="relative">
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Enter password"
            class="input peer"
            required
          />
          <label
            for="password"
            class="label peer-focus:text-primary peer-focus:font-semibold"
          >Password</label>
        </div>
      </div>
      <div>
        <span class="text-lg font-normal text-secondary-300 font-Hindmadurai">By registering, you
          agree to our</span>
        <a href="#" class="text-lg font-semibold text-primary font-Hindmadurai">Privacy and Terms</a>
      </div>
    </div>

    <div class="mt-5 text-center space-y-2.5">
      <button type="submit" class="btn-nav w-auto h-auto px-8 py-3 text-2xl font-Montserrat">Create
        an Account</button>
      <div>
        <span class="text-lg font-normal text-secondary-300 font-Hindmadurai">Already have an
          account?</span>
        <a
          href="/login"
          class="text-lg font-semibold text-secondary-400 uppercase font-Hindmadurai"
        >Login</a>
      </div>
    </div>
  </form>
</main>